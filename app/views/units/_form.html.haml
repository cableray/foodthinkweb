= form_for(@unit) do |f|
  - if @unit.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@unit.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @unit.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name

  .actions
    = f.submit
