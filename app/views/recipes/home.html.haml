.search{:class => 'search_box'}
  = form_tag recipes_path(), :method=>:get do
    = label_tag :search, "Search:"
    = text_field_tag :search, params["search"]
    = submit_tag "Search"

- for recipe in @featured
  =render :partial=>'featured', :locals=>{:recipe=>recipe}

= render 'recipe_list'