= form_for(@ingredient) do |f|
  - if @ingredient.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@ingredient.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @ingredient.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :description
    %br
    = f.text_area :description

  .actions
    = f.submit
