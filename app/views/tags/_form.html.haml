= form_for(@tag) do |f|
  - if @tag.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@tag.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @tag.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name

  .actions
    = f.submit
